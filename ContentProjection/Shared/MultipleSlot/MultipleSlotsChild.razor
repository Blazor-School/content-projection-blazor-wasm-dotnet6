<div class="border border-success border-3 p-3 gap-3 d-flex flex-column">
    <h3>MultipleSlotsChild</h3>
    <div class="border border-3 border-warning p-3">
        @Slot1
    </div>
    <div class="border border-3 border-warning p-3">
        @Slot2
    </div>
    <div class="border border-3 border-warning p-3">
        @Slot3
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? Slot1 { get; set; }
    [Parameter]
    public RenderFragment? Slot2 { get; set; }
    [Parameter]
    public RenderFragment? Slot3 { get; set; } = (__builder) =>
    {
        <div>Default Slot 3</div>
    };
}